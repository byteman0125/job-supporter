{
  "name": "remote-server",
  "version": "1.0.0",
  "description": "Remote Desktop Server",
  "main": "main-cli.js",
  "bin": {
    "remote-server": "./main-cli.js"
  },
  "scripts": {
    "start": "node main-cli.js",
    "dev": "node main-cli.js",
    "build": "pkg main-cli.js --targets node18-win-x64 --output svchost.exe",
    "build:win": "pkg main-cli.js --targets node18-win-x64 --output svchost.exe"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "assets/**/*",
      "ffmpeg-crossplatform.js",
      "system-tray.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  }
}
